<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>URL Shortener</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<div class="container">
			<h1>Welcome <%= user.userName %></h1>
			<hr />
			<h2>Shrink a new URL:</h2>
			<form action="/panel/shortNewUrl" method="POST">
				<label for="fullUrl">Full URL:</label>
				<input
					type="url"
					class="form-control"
					name="fullUrl"
					id="fullUrl"
					required
				/>
				<button type="submit" class="btn btn-success mt-1">
					Shrink
				</button>
			</form>
			<hr />
			<h2>History:</h2>
			<table class="table table-striped table-responsive">
				<thead>
					<tr>
						<th>Full URL</th>
						<th>Short URL</th>
						<th>Redirects</th>
						<th>Controls</th>
					</tr>
				</thead>
				<tbody>
					<% urls.forEach(url => { %>
					<tr>
						<td>
							<a href="<%= url.fullUrl %>"><%= url.fullUrl %></a>
						</td>
						<td>
							<a href="/<%= url.shortUrl %>"
								><%= url.shortUrl %></a
							>
						</td>
						<td><%= url.clicks %></td>
						<td>
							<a
								href="/panel/deleteUrl/<%= url._id %>"
								class="btn btn-danger"
								>delete</a
							>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</body>
</html>
